---
import LandingPage from "../components/LandingPage.jsx";
import "../styles/global.css";
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Estampados e impresiones para marcas, eventos y colecciones. Produccion rapida, acabados premium y asesoramiento creativo."
		/>
		<title>Damaris Print | Estampados e impresiones</title>
	</head>
	<body>
		<div id="preloader" class="preloader" aria-hidden="true">
			<img class="preloader-logo" src="/Logo.png" alt="Damaris Print" />
			<div class="preloader-spinner" aria-hidden="true"></div>
		</div>
		<LandingPage client:load />
		<script>
			const preloader = document.getElementById("preloader");
			const startTime = Date.now();
			const MIN_DURATION_MS = 1000;

			const hidePreloader = () => {
				if (!preloader) return;
				preloader.classList.add("is-hidden");
				window.setTimeout(() => preloader.remove(), 400);
			};

			window.addEventListener("load", () => {
				const elapsed = Date.now() - startTime;
				const remaining = Math.max(MIN_DURATION_MS - elapsed, 0);
				window.setTimeout(hidePreloader, remaining);
			});
		</script>
	</body>
</html>
