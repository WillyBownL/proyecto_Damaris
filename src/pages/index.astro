---
import LandingPage from "../components/LandingPage.jsx";
import Preloader from "../components/layout/Preloader.jsx";
import "../styles/global.css";
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Outfit:wght@400;500;600&display=swap" rel="stylesheet" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Estampados e impresiones para marcas, eventos y colecciones. Produccion rapida, acabados premium y asesoramiento creativo."
		/>
		<title>Damaris Print | Estampados e impresiones</title>
	</head>
	<body>
		<Preloader client:load />
		<LandingPage client:load />
		<script>
			const preloader = document.getElementById("preloader");
			const startTime = Date.now();
			const MIN_DURATION_MS = 1600;

			const hidePreloader = () => {
				if (!preloader) return;
				preloader.classList.add("is-hidden");
				window.setTimeout(() => preloader.remove(), 400);
			};

			window.addEventListener("load", () => {
				const elapsed = Date.now() - startTime;
				const remaining = Math.max(MIN_DURATION_MS - elapsed, 0);
				window.setTimeout(hidePreloader, remaining);
			});
		</script>
	</body>
</html>
